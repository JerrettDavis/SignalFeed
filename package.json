{
  "name": "sightsignal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:postgres": "playwright test --config=playwright.config.postgres.ts",
    "e2e:ui": "playwright test --ui",
    "dev:stack": "node scripts/dev-stack.mjs",
    "dev:compose": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "dev:compose:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "dev:compose:reset": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down -v",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down",
    "test:db:setup": "node scripts/test-db-setup.mjs",
    "test:e2e:full": "npm run test:db:up && npm run test:db:setup && npm run e2e:postgres && npm run test:db:down",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:wipe": "docker compose down -v",
    "db:ps": "docker compose ps",
    "db:check": "node scripts/check-db-env.mjs",
    "db:reset": "node scripts/reset-database.mjs",
    "db:seed": "node scripts/seed-database.mjs",
    "db:refresh": "npm run db:reset && npm run db:seed",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "jose": "^6.1.3",
    "maplibre-gl": "^5.17.0",
    "next": "16.1.6",
    "postgres": "^3.4.8",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "ulid": "^3.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
