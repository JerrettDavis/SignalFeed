# ==========================================
# SightSignal Environment Configuration
# ==========================================

# ------------------------------------------
# Admin Authentication
# ------------------------------------------

# Enable/disable admin authentication
# Set to "false" for local development without login
# Set to "true" for production (requires ADMIN_JWT_SECRET and ADMIN_USERS)
ADMIN_AUTH_ENABLED=true

# JWT secret for admin token signing (minimum 32 characters)
# Generate a secure secret: openssl rand -base64 32
ADMIN_JWT_SECRET=your-secret-key-min-32-chars-change-this-in-production

# Admin users in format: username:hashedPassword,username2:hashedPassword2
# Generate hash: node scripts/generate-admin-hash.mjs <password>
#
# NOTE: For E2E tests, this is automatically configured by playwright.config.ts
#       Leave commented out to use the E2E test credentials
#
# For local development with admin access, uncomment and set your own credentials:
# ADMIN_USERS=admin:your-bcrypt-hash-here
#
# Example with actual hash (DO NOT use this hash in production):
# ADMIN_USERS=admin:$2b$10$3ucZ/lmCdbbQNyxmXgDv2uBIXueZcUdtKpJVYkd5NvVdZyZVyRl3C
# The above hash corresponds to password: "Password!"

# ------------------------------------------
# Data Store Configuration
# ------------------------------------------

# Data store type: memory | file | postgres
SIGHTSIGNAL_DATA_STORE=file

# Directory for file-based storage (when DATA_STORE=file)
SIGHTSIGNAL_DATA_DIR=.local

# ------------------------------------------
# Database Configuration (PostgreSQL)
# ------------------------------------------

# PostgreSQL connection string (when DATA_STORE=postgres)
# Example: postgresql://user:password@localhost:5432/sightsignal
# SIGHTSIGNAL_DATABASE_URL=postgresql://localhost:5432/sightsignal

# ------------------------------------------
# Application Configuration
# ------------------------------------------

# Node environment
NODE_ENV=development

# Next.js configuration
# NEXT_PUBLIC_API_URL=http://localhost:3000
